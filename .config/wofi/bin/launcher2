DIR="$HOME/.config"

rofi \
	-show drun \
	-modi drun,run\
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields name \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal st -e \
	-kb-cancel Esc \
	-disable-history \
	-matching glob \
  	-sort \
  	-no-levenshtein-sort \
	-theme "$DIR"/rofi/themes/launcher2.rasi
