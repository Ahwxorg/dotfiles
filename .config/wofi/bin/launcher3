DIR="$HOME/.config"

wofi \
	-show drun \
	-modi drun,run\
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields name \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal alacritty \
	-kb-cancel Escape \
	-matching glob \
  	-sort \
  	-no-levenshtein-sort \
	-theme "$DIR"/wofi/themes/launcher3.rasi

