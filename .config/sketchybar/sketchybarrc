source "$HOME/.config/colors.sh"
source "$HOME/.config/icons.sh"

PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
ITEMS_DIR="$HOME/.config/sketchybar/items"

sketchybar --bar color=0x00000000 \
                 height=56        \
                 margin=0         \
                 y_offset=0       \
                 padding_left=8   \
                 padding_right=8

sketchybar --default padding_left=8                                    \
                     padding_right=8                                   \
                                                                       \
                     background.border_color=$COLOR_YELLOW             \
                     background.border_width=2                         \
                     background.height=40                              \
                     background.corner_radius=12                       \
                                                                       \
                     icon.color=$COLOR_YELLOW                          \
                     icon.highlight_color=$BASE                        \
                     icon.padding_left=6                               \
                     icon.padding_right=2                              \
                     icon.font="CaskaydiaCove Nerd Font:Regular:16.0"  \
                                                                       \
                     label.color=$COLOR_YELLOW                         \
                     label.highlight_color=$BASE                       \
                     label.padding_left=2                              \
                     label.padding_right=6                             \
                     label.font="CaskaydiaCove Nerd Font:Regular:12.0"

# source "$ITEMS_DIR/command.sh"
# source "$ITEMS_DIR/seperator-11.sh"

source "$ITEMS_DIR/spaces.sh"
source "$ITEMS_DIR/seperator-12.sh"

source "$ITEMS_DIR/mail.sh"
source "$ITEMS_DIR/github.sh"
source "$ITEMS_DIR/brew.sh"

sketchybar --add bracket notifications github.template github.bell  mail brew \
           --set         notifications background.color=$BASE                 \
                                       background.border_color=$COLOR_CYAN

source "$ITEMS_DIR/time.sh"

sketchybar --add bracket clock time date                          \
           --set         clock background.color=$BASE             \
                               background.border_color=$RED

source "$ITEMS_DIR/seperator-r1.sh"

source "$ITEMS_DIR/ip-addr.sh"
source "$ITEMS_DIR/volume.sh"
source "$ITEMS_DIR/battery.sh"

sketchybar --add bracket status ip_address volume battery           \
           --set         status background.color=$BASE              \
                                background.border_color=$COLOR_BLUE

source "$ITEMS_DIR/seperator-r2.sh"
source "$ITEMS_DIR/sys.sh"

sketchybar --add bracket activity ram disk cpu                     \
           --set         activity background.color=$BASE           \
                                  background.border_color=$MAGENTA

sketchybar --update

launchctl unload -F /System/Library/LaunchAgents/com.apple.OSDUIHelper.plist > /dev/null 2>&1 &
